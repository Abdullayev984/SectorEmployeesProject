@model EntityLayer.DTOs.EmployeeDTOs.EmployeeToAddOrUpdateDTO
@{
    Layout= null;
}
<html lang="en">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CompanyEmployee.MVC.styles.css" asp-append-version="true" />

<form asp-controller="Employee" asp-action="AddEmployee" method="post">

    <div class="form-group">

        <input type="text" asp-for="EmpId" class="form-control" id="name" hidden  >
    </div>
   
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" asp-for="EmpName" class="form-control" id="name" placeholder="Enter name...">
        <span asp-validation-for="EmpName" style="color:red"></span>
    </div>
    <div class="form-group">
        <label for="surname">Surname</label>
        <input type="text" asp-for="Surname" class="form-control" id="name" placeholder="Enter surname...">
        <span asp-validation-for="Surname" style="color:red"></span>

    </div>
    <div class="form-group">
        <label for="surname">Salary</label>
        <input type="text" asp-for="Salary" class="form-control" id="name" placeholder="Enter salary...">
        <span asp-validation-for="Salary" style="color:red"></span>

    </div>

    <div class="form-group">
        <label>SectorName</label>
        @Html.DropDownListFor(x =>  x.SectorId, (IEnumerable<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>



    <button type="submit" class="btn btn-primary">Create</button>
</form>
</html>